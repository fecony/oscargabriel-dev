{
	"name": "oscar-gabriel-dev",
	"version": "1.0.0",
	"description": "Oscar Gabriel",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"clean": "rm -rf ./node_modules/.vite",
		"dev": "bun alchemy dev --env-file .env.dev",
		"dev:clean": "bun clean:vite && bun dev",
		"dev:vite": "bun --env-file=.env.dev vite dev",
		"check": "biome check --write src --verbose",
		"check:unsafe": "biome check --write src --unsafe --verbose",
		"typecheck": "tsc --noEmit",
		"infra:up": "bun alchemy deploy --env-file .env.prod",
		"infra:down": "bun alchemy destroy --env-file .env.prod"
	},
	"dependencies": {
		"@biomejs/biome": "2.2.2",
		"@date-fns/tz": "^1.4.1",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.12",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"lucide-react": "^0.542.0",
		"radix-ui": "^1.4.3",
		"rehype-highlight": "^7.0.2",
		"rwsdk": "0.3.0",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.12",
		"vite": "6.3.5"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250904.0",
		"@content-collections/core": "^0.11.1",
		"@content-collections/markdown": "^0.1.4",
		"@content-collections/vite": "^0.2.7",
		"@types/node": "^24.3.1",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.9",
		"alchemy": "^0.64.0",
		"tw-animate-css": "^1.3.8",
		"typescript": "^5.9.2",
		"wrangler": "^4.34.0",
		"zod": "^4.1.5"
	},
	"packageManager": "bun@1.2.20",
	"trustedDependencies": [
		"@swc/core",
		"@tailwindcss/oxide",
		"esbuild",
		"sharp",
		"workerd"
	]
}
